<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_oki_overtime_request" model="ir.actions.act_window">
        <field name="name">Surat Perintah Lembur (SPL)</field>
        <field name="res_model">oki.overtime.request</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Belum ada data SPL.
            </p>
            <p>
                Buat Surat Perintah Lembur untuk karyawan di sini agar lembur terhitung otomatis di Kartu Absensi.
            </p>
        </field>
    </record>

    <menuitem id="menu_oki_attendance_root"
              name="Kartu Absensi"
              parent="hr_attendance.menu_hr_attendance_root"
              sequence="50"/>

    <menuitem id="menu_oki_overtime_request"
              name="Surat Perintah Lembur (SPL)"
              parent="menu_oki_attendance_root"
              action="action_oki_overtime_request"
              sequence="5"/>

    <menuitem id="menu_oki_attendance_card"
              name="Data Kartu Absensi"
              parent="menu_oki_attendance_root"
              action="action_oki_attendance_card"
              sequence="10"/>

    <menuitem id="menu_oki_attendance_wizard"
              name="Cetak Rekap Karyawan"
              parent="menu_oki_attendance_root"
              action="action_oki_attendance_card_generate_wizard"
              sequence="20"/>
</odoo>