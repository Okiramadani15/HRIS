<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_oki_generate_attendance_card_wizard_form" model="ir.ui.view">
        <field name="name">oki.attendance.card.generate.wizard.form</field>
        <field name="model">oki.attendance.card.generate.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Kartu Absensi">
                <group>
                    <field name="employee_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    <group>
                        <field name="date_from"/>
                    </group>
                    <group>
                        <field name="date_to"/>
                    </group>
                </group>
                <footer>
                    <button name="action_generate_card" type="object" string="Generate" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_oki_attendance_card_generate_wizard" model="ir.actions.act_window">
        <field name="name">Cetak Rekap Karyawan</field>
        <field name="res_model">oki.attendance.card.generate.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>